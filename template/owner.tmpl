<html>
<head>
<title>{{.OwnerIP}}'s client list</title>
<style type="text/css">
/* copy from http://www.w3school.com.cn/tiy/t.asp?f=csse_table_fancy */
#profile
  {
  font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
  border-collapse:collapse;
  }

#profile td, #profile th 
  {
  font-size:1em;
  border:1px solid #98bf21;
  padding:3px 7px 2px 7px;
  min-width:100px;
  }

#profile th 
  {
  font-size:1.1em;
  text-align:left;
  padding-top:5px;
  padding-bottom:4px;
  background-color:#A7C942;
  color:#ffffff;
  }

#profile tr.alt td 
  {
  color:#000000;
  background-color:#EAF2D3;
  }
</style>
<script type="text/javascript">

function editProfile(ip)
{
  if (ip == "")
  {
    alert("客户端 IP 为空");
    return;
  }

  var re=/^(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])(\.(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])){3}$/;
  if (!re.test(ip))
  {
    alert("无效客户端 IP（应为四段数字“xxx.xx.xxx.xx”且数字介于 0~255 之间）");
    return;
  }

  self.location='/profile/'+ip;
}
</script>
</head>
<body>

<table id="profile">
<tr>
<th>编辑</th>
<th>名字</th>
<th>客户端 IP</th>
</tr>
{{range .IPs}}
<tr{{if .Even}} class="alt"{{end}}>
<td><input type="button" value="编辑" onclick="editProfile('{{.IP}}');"/></td>
<td>{{.Name}}</td>
<td>{{.IP}}</td>
</tr>
{{end}}
</table>
<hr/>

<h2>请输入要管理的客户端 IP：</h2>
<input type="text" id="ip"/>
<input type="button" value="编辑" onclick="editProfile(document.getElementById('ip').value)"/>
</body>
</html>
